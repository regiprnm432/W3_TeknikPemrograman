import java.util.*; 

public class Solution4 {

	public static void main(String[] args) {
		Scanner jumlahBarang = new Scanner(System.in);	
		int n=jumlahBarang.nextInt();
		int gajiPokok=500000;
		int gajiTotal;
		
		for(int i=0; i<=n; i++) {
			try {
				if(n<=15) {
					gajiTotal=gajiPokok-((gajipokok*15)/100);
					System.out.println(gajiTotal); 
				}
			}
		}
	}

}
